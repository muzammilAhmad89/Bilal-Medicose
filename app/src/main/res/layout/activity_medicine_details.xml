<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.ActivityMedicineDetails">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/medName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="medName"
            android:textSize="18dp"
            android:fontFamily="@font/montserrate_semi_bold"
            />
        <TextView
            android:id="@+id/tvMedPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="formula"
            android:layout_toRightOf="@+id/medName"
            android:fontFamily="@font/montserrate_semi_bold"
            android:textSize="18dp"
            android:layout_marginLeft="4dp"
            />
        <TextView
            android:id="@+id/medFormula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="medicine Formula"
            android:textSize="14dp"
            android:fontFamily="@font/montserrate_semi_bold"
            android:layout_below="@+id/medName"
            android:textColor="@color/grey"
            />
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_marginVertical="10dp"
            android:layout_below="@id/medFormula"
            android:layout_marginRight="70dp"
            />
        <TextView
            android:id="@+id/tvRetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retail:"
            android:textColor="@color/blue"
            android:fontFamily="@font/montserrate_semi_bold"
            android:textSize="12dp"
            android:layout_below="@id/view"
            />
        <TextView
            android:id="@+id/retail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="425"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12dp"
            android:layout_toRightOf="@+id/tvRetail"
            android:layout_below="@id/view"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:"
            android:fontFamily="@font/montserrate_semi_bold"
            android:textColor="@color/blue"
            android:textSize="12dp"
            android:layout_below="@id/tvRetail"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="234"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:layout_below="@id/tvRetail"
            android:layout_toRightOf="@id/tvPrice"
            android:layout_marginTop="5dp"
            />
        
    </RelativeLayout>

</LinearLayout>