<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/medLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/medName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrate_semi_bold"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/medPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mg"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/medName"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/montserrate_semi_bold"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/medFromula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/medName"
            android:layout_marginLeft="10dp"
            android:text="Formula"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:fontFamily="@font/montserrat_regular"
            />
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:textColor="@color/grey"
            android:fontFamily="@font/montserrat_regular"
            android:layout_below="@id/medFromula"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_below="@id/date"
            android:layout_marginTop="5dp"
            />

    </RelativeLayout>
</LinearLayout>