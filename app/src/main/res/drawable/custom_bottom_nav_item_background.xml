<!-- res/drawable/custom_bottom_nav_item_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unselected state -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#ACC8E5" /> <!-- Background color for unselected item -->
        </shape>
    </item>
    <!-- Selected state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#ACC8E5" /> <!-- Background color for selected item -->
        </shape>
    </item>
</selector>
